rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /fcmTokens/{token} {
      // Allow authenticated users to create/update tokens with their own uid
      allow create, update: if request.auth != null &&
                               request.resource.data.uid == request.auth.uid;
      // Allow authenticated users to delete any token by ID
      // (users only know their own FCM token, so this is safe)
      allow delete: if request.auth != null;
      // Allow authenticated users to read any token by ID
      // (users only know their own FCM token, so this is safe)
      allow get: if request.auth != null;
      // Prevent listing all tokens
      allow list: if false;
    }
    match /messages/{messageId} {
      allow write: if false;
      allow read: if false;
    }
  }
}
